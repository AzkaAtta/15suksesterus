---

import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**

Header Component

@description A component that displays the header of the website
*/



---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item"><a href="/">Home</a></li>
    <li class="menu-item"><a href="/layanan/">Layanan</a></li>
    <li class="menu-item"><a href="/about/">Tentang Kami</a></li>
    <li class="menu-item"><a href="/blog/">Blog</a></li>
    <li class="menu-item"><a href="/kontak/">Kontak</a></li>

    <!-- Dropdown -->
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Produk & Jasa
        <Icon name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item"><a href="/komentar-instagram/">Komentar Instagram</a></li>
        <li class="submenu-item"><a href="/followers-instagram/">Followers Instagram</a></li>
        <li class="submenu-item"><a href="/views-tiktok/">Views TikTok</a></li>
        <li class="submenu-item"><a href="/trending-topik/">Trending Topik</a></li>
        <li class="submenu-item"><a href="/jasa-report/">Jasa Report</a></li>
      </ul>
    </li>

    <!-- SPACER: dorong item berikutnya ke kanan -->
    <li class="menu-spacer" aria-hidden="true"></li>

    <!-- CTA WhatsApp di kanan -->
    <li class="menu-item cta">
      <a
        href="https://wa.me/62895400361414?text=Halo%20admin%2C%20saya%20ingin%20konsultasi%20layanan."
        aria-label="Chat Admin via WhatsApp"
      >
        <Icon name="lucide:phone" />
        <span>Chat Admin</span>
      </a>
    </li>

    <!-- Dark mode toggle -->
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>
  
<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg { 
        inline-size: 30px; 
        block-size: 30px; 
      }
    }

    /* Spacer dorong CTA ke kanan */
    .menu-spacer { flex: 1 1 auto; }

    /* Tombol WhatsApp */
    .menu-item.cta a {
      display: inline-flex;
      align-items: center;
      gap: .5rem;
      padding: .55rem .9rem;
      border-radius: 9999px;
      font-weight: 700;
      text-decoration: none;
      border: 1px solid var(--border-color);
      box-shadow: 0 6px 18px rgb(0 0 0 / .08);
      background-image: linear-gradient(135deg, #22c55e, #06b6d4);
      color: #fff;
      transition: transform .15s ease, box-shadow .15s ease, opacity .15s ease;
    }
    .menu-item.cta a [data-icon] {
      inline-size: 20px; 
      block-size: 20px;
    }
    .menu-item.cta a:hover,
    .menu-item.cta a:focus-visible {
      transform: translateY(-1px);
      box-shadow: 0 10px 22px rgb(0 0 0 / .12);
      opacity: .95;
    }
  }
</style>
