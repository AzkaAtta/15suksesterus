---
import Layout from '@layouts/DefaultLayout.astro'
import SiteMeta from '@components/SiteMeta.astro'

// Data Layanan (bisa kamu pindahkan ke file JSON/MDX kalau banyak)
const services = [
  {
    name: "Followers Instagram",
    description: "Tingkatkan jumlah followers Instagram Anda secara organik & aman.",
    url: "https://auradigital.id/layanan/followers-instagram",
    image: "/layanan.webp",
  },
  {
    name: "Views TikTok",
    description: "Dapatkan views TikTok lebih banyak untuk meningkatkan exposure konten.",
    url: "https://auradigital.id/layanan/views-tiktok",
    image: "/layanan.webp",
  },
  {
    name: "Trending Topik",
    description: "Buat topik Anda ramai di Twitter/X dengan layanan trending topik cepat & aman.",
    url: "https://auradigital.id/layanan/trending-topik",
    image: "/layanan.png",
  },
  {
    name: "Jasa Report",
    description: "Laporkan akun bermasalah di sosial media dengan metode aman & efektif.",
    url: "https://auradigital.id/layanan/jasa-report",
    image: "/layanan.png",
  },
]

const faq = [
  {
    q: "Bagaimana cara memesan layanan?",
    a: "Pilih layanan, lakukan pembayaran, dan tim kami segera memproses pesanan Anda."
  },
  {
    q: "Metode pembayaran apa saja yang tersedia?",
    a: "Kami menerima e-wallet (Dana, OVO, GoPay, ShopeePay), transfer bank, dan kartu kredit (Visa & Mastercard)."
  }
]
---

<Layout>
  <SiteMeta 
    title="Layanan Sosial Media | Aura Digital"
    description="Jasa sosial media lengkap: followers, likes, views, komentar, trending topik, hingga jasa report. Semua aman, murah, dan terpercaya."
    keywords={["jasa sosial media", "followers instagram", "views tiktok", "trending topik", "jasa report"]}
    url="https://auradigital.id/layanan/"
    image="/layanan.webp"
    imageAlt="Layanan Sosial Media Aura Digital"
    ogType="website"
    locale="id_ID"
  />

  <section class="py-16 container">
    <h1 class="text-3xl font-bold text-center mb-8">Layanan Kami</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((s) => (
        <a href={s.url} class="block border rounded-xl shadow hover:shadow-lg transition p-6 bg-white dark:bg-neutral-900">
          <img src={s.image} alt={s.name} loading="lazy" class="w-full h-40 object-cover rounded-md mb-4"/>
          <h2 class="text-xl font-semibold mb-2">{s.name}</h2>
          <p class="text-gray-600 dark:text-gray-300">{s.description}</p>
        </a>
      ))}
    </div>
  </section>

  <section class="py-16 container">
    <h2 class="text-2xl font-bold text-center mb-6">FAQ</h2>
    <div class="max-w-2xl mx-auto space-y-4">
      {faq.map((item) => (
        <details class="border rounded-lg p-4">
          <summary class="cursor-pointer font-medium">{item.q}</summary>
          <p class="mt-2 text-gray-600 dark:text-gray-300">{item.a}</p>
        </details>
      ))}
    </div>
  </section>

  <!-- Schema JSON-LD untuk Layanan + FAQ + Product -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        ...services.map((s) => ({
          "@type": "Service",
          "serviceType": s.name,
          "description": s.description,
          "provider": {
            "@type": "WebSite",
            "name": "Aura Digital",
            "url": "https://auradigital.id/"
          },
          "url": s.url,
          "image": s.image,
        })),
        {
          "@type": "FAQPage",
          "mainEntity": faq.map((f) => ({
            "@type": "Question",
            "name": f.q,
            "acceptedAnswer": {
              "@type": "Answer",
              "text": f.a
            }
          }))
        },
        ...services.map((s) => ({
          "@type": "Product",
          "name": s.name,
          "description": s.description,
          "url": s.url,
          "image": s.image,
          "brand": {
            "@type": "Brand",
            "name": "Aura Digital"
          }
        }))
      ]
    }, null, 2)}
  </script>
</Layout>
