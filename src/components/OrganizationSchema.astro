---
interface Props {
  name?: string
  url?: string
  logo?: string
  sameAs?: string[]
  telephone?: string
  languages?: string[]
}

const {
  name = 'Aura Digital',
  url = 'https://auradigital.id',
  logo = 'https://auradigital.id/logo.png', // pastikan file ada, bisa PNG/SVG (â‰¥112Ã—112 untuk PNG)
  sameAs = [
    'https://www.instagram.com/auradigitalid',
    'https://www.tiktok.com/@auradigitalid',
  ],
  telephone = '+62-895-4003-61414',
  languages = ['Indonesian', 'English'],
}: Props = Astro.props

const data = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name, url, logo,
  sameAs,
  contactPoint: {
    "@type": "ContactPoint",
    telephone,
    contactType: "customer service",
    availableLanguage: languages
  }
}
---

