---
interface Props {
  title: string
  description: string
  url: string
  image: string
  siteName?: string
  type?: string
  author?: string
  keywords?: string[]
}

const {
  title,
  description,
  url,
  image,
  siteName = 'Aura Digital',
  type = 'website',
  author = 'Aura Digital',
  keywords = [],
} = Astro.props
---

<!-- General Meta -->
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content={author} />
{keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:site_name" content={siteName} />
<meta property="og:image" content={`${Astro.site}${image}`} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={`${Astro.site}${image}`} />

<script type="application/ld+json">
  {JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": siteName,
    "url": url,
    "logo": `${Astro.site}/logo.png`,
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+62-895-4003-61414",
      "contactType": "customer service",
      "availableLanguage": ["Indonesian", "English"]
    },
    "sameAs": [
      "https://www.instagram.com/auradigitalid",
      "https://www.tiktok.com/@auradigitalid"
    ]
  }, null, 2)}
</script>

<!-- Page Title -->
<title>{title}</title>
