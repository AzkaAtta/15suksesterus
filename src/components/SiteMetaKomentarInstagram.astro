---
/**
 * SiteMetaKomentarInstagram.astro — Meta tag untuk /komentar-instagram/
 */
interface HrefLang { href: string; hreflang: string }
interface Props {
  title?: string
  description?: string
  keywords?: string[] | string
  author?: string
  url?: string
  siteName?: string
  canonical?: string
  noindex?: boolean
  image?: string
  imageAlt?: string
  imageWidth?: number
  imageHeight?: number
  ogType?: 'website' | 'article' | 'product' | 'profile'
  twitterCard?: 'summary_large_image' | 'summary'
  twitterSite?: string
  twitterCreator?: string
  locale?: string
  hrefLangs?: HrefLang[]
  themeColor?: string
}

const {
  title = 'Jasa Komentar Instagram Organik & Relevan — Aura Digital',
  description = 'Tambah komentar Instagram yang relevan dan aman untuk meningkatkan engagement & social proof. Cocok untuk Feed, Reels, dan kampanye brand.',
  keywords = [
    'jasa komentar instagram',
    'tambah komentar ig',
    'komentar organik instagram',
    'jasa social media',
    'engagement instagram'
  ],
  author = 'Aura Digital',
  url = 'https://auradigital.id/komentar-instagram/',
  siteName = 'Aura Digital',
  canonical,
  noindex = false,
  image = '/komentar-instagram.png',
  imageAlt = 'Layanan Komentar Instagram',
  imageWidth = 1200,
  imageHeight = 630,
  ogType = 'product',
  twitterCard = 'summary_large_image',
  twitterSite = '@auradigitalid',
  twitterCreator = '@auradigitalid',
  locale = 'id_ID',
  hrefLangs = [],
  themeColor = '#ffffff',
}: Props = Astro.props

const siteOrigin = Astro.site?.href?.replace(/\/$/, '') || ''
const ensureAbs = (src: string) =>
  /^https?:\/\//.test(src) ? src : `${siteOrigin}${src.startsWith('/') ? '' : '/'}${src}`

const pageUrl = (canonical || url).replace(/\/?$/, '/')
const ogImage = ensureAbs(image)
const kw = Array.isArray(keywords) ? keywords.join(', ') : keywords
---

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{kw && <meta name="keywords" content={kw} />}
<meta name="author" content={author} />
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
<link rel="canonical" href={pageUrl} />

{hrefLangs.length > 0
  ? hrefLangs.map(a => <link rel="alternate" hreflang={a.hreflang} href={a.href} />)
  : <link rel="alternate" hreflang="x-default" href={pageUrl} />
}

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={ogType} />
<meta property="og:url" content={pageUrl} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={locale} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:secure_url" content={ogImage} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:image:width" content={String(imageWidth)} />
<meta property="og:image:height" content={String(imageHeight)} />

<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:site" content={twitterSite} />
<meta name="twitter:creator" content={twitterCreator} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<meta name="theme-color" content={themeColor} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
