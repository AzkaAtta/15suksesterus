---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import SiteMetaViewInstagram from '@components/SiteMetaViewInstagram.astro'
import SchemaViewInstagram from '@components/SchemaViewInstagram.astro'
import { Icon } from 'astro-icon/components' // ← tetap perlu jika ada <Icon />
---

<DefaultLayout title="Views Instagram">
  <Fragment slot="head">
  <SiteMetaViewInstagram
    title="Jasa Tambah Views Instagram Reels & Feed — Aman, Murah, Cepat"
    description="Tambah tayangan Reels & Feed secara aman & bertahap. Bantu konten masuk Explore dan raih jangkauan lebih luas."
    url="/views-instagram/"
    image="/views-instagram.png"
    siteName="Aura Digital"
    ogType="product"
    keywords={[
      'jasa view instagram',
      'tambah view reels',
      'beli views instagram murah',
      'optimasi instagram'
    ]}
  />

  <!-- JSON-LD inline (valid JSON, tidak ada trailing comma) -->
  {
    (() => {
      const data = {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebPage",
            "@id": "/views-instagram/#webpage",
            "url": "/views-instagram/",
            "name": "Jasa Tambah Views Instagram Reels & Feed — Aman, Murah, Cepat",
            "description": "Tambah tayangan Reels & Feed secara aman & bertahap. Bantu konten masuk Explore dan raih jangkauan lebih luas.",
            "primaryImageOfPage": {
              "@type": "ImageObject",
              "url": "/views-instagram.png",
              "contentUrl": "/views-instagram.webp",
              "encodingFormat": ["image/png", "image/webp"]
            },
            "isPartOf": { "@id": "/#website" }
          },
          {
            "@type": "BreadcrumbList",
            "@id": "/views-instagram/#breadcrumb",
            "itemListElement": [
              { "@type": "ListItem", "position": 1, "name": "Home", "item": "/" },
              { "@type": "ListItem", "position": 2, "name": "Layanan", "item": "/layanan/" },
              { "@type": "ListItem", "position": 3, "name": "Views Instagram", "item": "/views-instagram/" }
            ]
          },
          {
            "@type": "Service",
            "@id": "/views-instagram/#service",
            "name": "Views Instagram",
            "url": "/views-instagram/",
            "description": "Jasa views Instagram untuk Reels & Feed, aman dan bertahap.",
            "serviceType": "Video Views",
            "areaServed": "ID",
            "image": {
              "@type": "ImageObject",
              "url": "/views-instagram.png",
              "contentUrl": "/views-instagram.webp",
              "encodingFormat": ["image/png", "image/webp"]
            },
            "provider": { "@type": "Organization", "name": "Aura Digital", "url": "/" },
            "offers": [
              {
                "@type": "Offer",
                "price": "200000",
                "priceCurrency": "IDR",
                "url": "/views-instagram/?ref=order",
                "availability": "https://schema.org/InStock"
              }
            ],
            "potentialAction": [
              { "@type": "OrderAction", "target": "/views-instagram/?ref=order" },
              { "@type": "ContactAction", "target": "/kontak/" }
            ]
          }
        ]
      };
      return <script type="application/ld+json">{JSON.stringify(data)}</script>;
    })()
  }
</Fragment>

  <!-- ===== HERO SECTION ===== -->
  <section class="container my-12">
    <h1 class="text-5xl md:text-6xl font-bold">Jasa Tambah Views Instagram</h1>
    <p class="text-xl opacity-80 mt-4 max-w-3xl">
      Tingkatkan jumlah tayangan Instagram Reels & Feed dengan cepat, aman, dan murah.
      Bantu konten Anda lebih mudah masuk <strong>Explore</strong> dan menjangkau audiens lebih luas.
    </p>

    <figure class="mt-8 overflow-hidden rounded-2xl border">
      <picture>
        <source srcset="/views-instagram.webp" type="image/webp" />
        <img src="/views-instagram.png" alt="Layanan Views Instagram" loading="eager" class="w-full h-auto" />
      </picture>
    </figure>
  </section>
</DefaultLayout>
