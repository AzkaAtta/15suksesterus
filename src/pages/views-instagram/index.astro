---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import SiteMetaViewInstagram from '@components/SiteMetaViewInstagram.astro'
import SchemaViewInstagram from '@components/SchemaViewInstagram.astro'
import { Icon } from 'astro-icon/components' // ← tetap perlu jika ada <Icon />
---

<DefaultLayout title="Views Instagram">
  <Fragment slot="head">
    <SiteMetaViewInstagram
      title="Jasa Sosial Media: Tambah Views Instagram Reels & Feed Aman, Murah, Cepat"
      description="Layanan jasa views Instagram untuk Reels & Feed. Tambah tayangan real, aman, dan murah agar konten Anda lebih banyak dilihat dan berpeluang masuk explore."
      url="https://auradigital.id/views-instagram/"
      image="/views-instagram.png"
      siteName="Aura Digital"
      ogType="product"
      keywords={[
        'jasa view instagram',
        'tambah view reels',
        'beli views instagram murah',
        'jasa sosial media aman',
        'optimasi instagram'
      ]}
    />

    <!-- ✅ Inline JSON-LD -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebPage",
            "@id": "https://auradigital.id/views-instagram/#webpage",
            "url": "https://auradigital.id/views-instagram/",
            "name": "Jasa Sosial Media: Tambah Views Instagram Reels & Feed Aman, Murah, Cepat",
            "description": "Jasa tambah views Instagram untuk Reels & Feed. Tambah tayangan real, aman, dan murah agar konten Anda lebih banyak dilihat dan berpeluang masuk explore.",
            "isPartOf": { "@id": "https://auradigital.id/#website" },
            "primaryImageOfPage": {
              "@type": "ImageObject",
              "url": "https://auradigital.id/views-instagram.png",
              "contentUrl": "https://auradigital.id/views-instagram.webp",
              "encodingFormat": ["image/png","image/webp"]
            }
          },
          {
            "@type": "BreadcrumbList",
            "@id": "https://auradigital.id/views-instagram/#breadcrumb",
            "itemListElement": [
              { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://auradigital.id/" },
              { "@type": "ListItem", "position": 2, "name": "Layanan", "item": "https://auradigital.id/layanan/" },
              { "@type": "ListItem", "position": 3, "name": "Views Instagram", "item": "https://auradigital.id/views-instagram/" }
            ]
          },
          {
            "@type": "Service",
            "@id": "https://auradigital.id/views-instagram/#service",
            "name": "Views Instagram",
            "url": "https://auradigital.id/views-instagram/",
            "description": "Jasa tambah views Instagram untuk Reels & Feed. Tambah tayangan real, aman, dan murah agar konten Anda lebih banyak dilihat dan berpeluang masuk explore.",
            "serviceType": "Video Views",
            "areaServed": "ID",
            "image": {
              "@type": "ImageObject",
              "url": "https://auradigital.id/views-instagram.png",
              "contentUrl": "https://auradigital.id/views-instagram.webp",
              "encodingFormat": ["image/png","image/webp"]
            },
            "provider": {
              "@type": "Organization",
              "name": "Aura Digital",
              "url": "https://auradigital.id/"
            },
            "offers": [
              {
                "@type": "Offer",
                "price": "2000000",
                "priceCurrency": "IDR",
                "unitText": "per 1000 views",
                "url": "https://auradigital.id/views-instagram/?ref=order",
                "availability": "https://schema.org/InStock"
              }
            ],
            "potentialAction": [
              { "@type": "OrderAction", "target": "https://auradigital.id/views-instagram/?ref=order" },
              { "@type": "ContactAction", "target": "https://auradigital.id/kontak/" }
            ]
          }
        ]
      })}
    </script>
  </Fragment>

  <!-- ===== HERO SECTION ===== -->
  <section class="container my-12">
    <h1 class="text-5xl md:text-6xl font-bold">Jasa Tambah Views Instagram</h1>
    <p class="text-xl opacity-80 mt-4 max-w-3xl">
      Tingkatkan jumlah tayangan Instagram Reels & Feed dengan cepat, aman, dan murah.
      Bantu konten Anda lebih mudah masuk <strong>Explore</strong> dan menjangkau audiens lebih luas.
    </p>

    <figure class="mt-8 overflow-hidden rounded-2xl border">
      <picture>
        <source srcset="/views-instagram.webp" type="image/webp" />
        <img src="/views-instagram.png" alt="Layanan Views Instagram" loading="eager" class="w-full h-auto" />
      </picture>
    </figure>
  </section>
</DefaultLayout>
