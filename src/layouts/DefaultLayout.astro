---
// src/layouts/DefaultLayout.astro
import '../styles/tailwind.css'
import '../assets/scss/index.scss'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { ClientRouter } from 'astro:transitions'

const {
  title = 'Aura Digital',
  description = 'Jasa sosial media & digital marketing yang aman dan terpercaya.',
  url = Astro.site,
  image = 'social-preview-image.png',
  author = 'Aura Digital',
} = Astro.props
---

<html lang="id" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- âœ… Semua meta/schema per halaman masuk dari slot head -->
    <slot name="head" />

    <!-- Enable Astro View Transitions (opsional) -->
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <Footer />

    <style lang="scss" is:global>
      html, body { height: 100%; }
      body { display: flex; flex-direction: column; overflow-x: clip; }
      main { flex: 1 0 auto; }
      footer { flex-shrink: 0; }
      pre { border: 2px solid var(--link-color); border-radius: .35rem; padding: 1rem; }
    </style>
  </body>
</html>
