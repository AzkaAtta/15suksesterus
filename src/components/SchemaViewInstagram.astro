---
/**
 * SchemaViewInstagram.astro — Schema lengkap untuk halaman /views-instagram/
 * Termasuk: WebPage, BreadcrumbList, Service(+OfferCatalog), FAQPage
 */

interface FAQItem { q: string; a: string }

const {
  pageUrl = 'https://auradigital.id/views-instagram/',
  pageTitle = 'Jasa Sosial Media: Tambah Views Instagram Reels & Feed Aman, Murah, Cepat',
  description = 'Jasa tambah views Instagram untuk Reels & Feed. Views real, aman, murah agar konten lebih banyak ditonton & berpeluang masuk Explore.',
  imageWebp = '/views-instagram.webp',
  imagePng = '/views-instagram.png',
  serviceName = 'Views Instagram',
  serviceType = 'Video Views',
  areaServed = 'ID',
  faqItems = [
    { q: 'Apakah views Instagram ini aman?', a: 'Ya, proses bertahap & menggunakan metode yang aman agar akun tidak terkena penalti.' },
    { q: 'Berapa lama proses penambahan views?', a: 'Umumnya 1–24 jam setelah pembayaran terkonfirmasi.' }
  ]
} = Astro.props

const site = 'https://auradigital.id'

// ===== Graph JSON-LD =====
const graph: any[] = [
  {
    '@type': 'WebPage',
    '@id': `${pageUrl}#webpage`,
    url: pageUrl,
    name: pageTitle,
    description,
    isPartOf: { '@id': `${site}/#website` },
    primaryImageOfPage: {
      '@type': 'ImageObject',
      url: `${site}${imagePng}`,
      contentUrl: `${site}${imageWebp}`,
      encodingFormat: ['image/png', 'image/webp']
    }
  },
  {
    '@type': 'BreadcrumbList',
    '@id': `${pageUrl}#breadcrumb`,
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: `${site}/` },
      { '@type': 'ListItem', position: 2, name: 'Layanan', item: `${site}/layanan/` },
      { '@type': 'ListItem', position: 3, name: serviceName, item: pageUrl }
    ]
  },
  {
    '@type': 'Service',
    '@id': `${pageUrl}#service`,
    name: serviceName,
    url: pageUrl,
    description,
    serviceType,
    areaServed,
    image: {
      '@type': 'ImageObject',
      url: `${site}${imagePng}`,
      contentUrl: `${site}${imageWebp}`,
      encodingFormat: ['image/png', 'image/webp']
    },
    provider: { '@type': 'Organization', name: 'Aura Digital', url: site },
    offers: [
      {
        '@type': 'Offer',
        price: '2000',
        priceCurrency: 'IDR',
        unitText: 'per 1 view',
        availability: 'https://schema.org/InStock',
        url: `${pageUrl}?ref=order`
      }
    ],
    potentialAction: [
      { '@type': 'OrderAction', target: `${pageUrl}?ref=order` },
      { '@type': 'ContactAction', target: `${site}/kontak/` }
    ]
  },
  {
    '@type': 'OfferCatalog',
    '@id': `${pageUrl}#catalog`,
    name: 'Paket Views Instagram',
    url: pageUrl,
    itemListElement: [
      {
        '@type': 'Offer',
        name: '100 Views Instagram',
        price: '200000',
        priceCurrency: 'IDR',
        unitText: 'per 100 views',
        url: `${pageUrl}?ref=order&paket=100`
      },
      {
        '@type': 'Offer',
        name: '500 Views Instagram',
        price: '1000000',
        priceCurrency: 'IDR',
        unitText: 'per 500 views',
        url: `${pageUrl}?ref=order&paket=500`
      },
      {
        '@type': 'Offer',
        name: '1000 Views Instagram',
        price: '2000000',
        priceCurrency: 'IDR',
        unitText: 'per 1000 views',
        url: `${pageUrl}?ref=order&paket=1000`
      }
    ]
  }
]

// Tambahkan FAQ kalau ada
if (faqItems.length) {
  graph.push({
    '@type': 'FAQPage',
    '@id': `${pageUrl}#faq`,
    mainEntity: faqItems.map(f => ({
      '@type': 'Question',
      name: f.q,
      acceptedAnswer: { '@type': 'Answer', text: f.a }
    }))
  })
}

const jsonld = { '@context': 'https://schema.org', '@graph': graph }
---

<script type="application/ld+json" set:html={JSON.stringify(jsonld)}></script>
