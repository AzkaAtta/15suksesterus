---
interface Props {
  name?: string
  url?: string
  logo?: string
  sameAs?: string[]
  telephone?: string
  languages?: string[]
}

const {
  name = 'Aura Digital',
  url = 'https://auradigital.id',
  logo = 'https://auradigital.id/logo-auradigital.png',
  sameAs = [
    'https://t.me/auradigitalID',
    'https://x.com/auradigitalID',
    'https://www.tiktok.com/@indobuzz',
    'https://www.instagram.com/jasa.liketerpercaya.id',
  ],
  telephone = '+62-895-4003-61414',
  languages = ['Indonesian', 'English'],
}: Props = Astro.props

const site = url.replace(/\/$/, '')

const data = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  '@id': `${site}/#organization`,
  name,
  url: `${site}/`,
  logo: { '@type': 'ImageObject', url: logo },
  sameAs,
  contactPoint: [{
    '@type': 'ContactPoint',
    telephone,
    contactType: 'customer service',
    availableLanguage: languages
  }]
}
---

<script type="application/ld+json" set:html={JSON.stringify(data)}></script>
