---
/**
 * SiteMetaViewInstagram.astro — Meta khusus halaman Views Instagram
 */

interface Props {
  title?: string;
  description?: string;
  keywords?: string[] | string;
  url?: string;
  siteName?: string;
  image?: string;
  imageAlt?: string;
  imageWidth?: number;
  imageHeight?: number;
  noindex?: boolean;
  locale?: string;
  alternateLocales?: string[];
  themeColor?: string;
}

const {
  // ✅ Title pakai kata jualan + informasi
  title = 'Jasa Tambah Views Instagram Aman | Cara Naikkan Tayangan Reels & Feed',
  
  // ✅ Deskripsi mix jualan + informasi + question
  description = 'Beli views Instagram murah & real untuk Reels dan Feed. Apakah aman? Kami jelaskan cara menambah tayangan Instagram agar konten lebih banyak ditonton dan berpeluang masuk Explore.',
  
  // ✅ Keywords: 3 jenis kata kunci
  keywords = [
    // jualan
    'jasa view instagram',
    'beli views instagram murah',
    'tambah views reels feed',
    // informasi
    'cara meningkatkan views instagram',
    'manfaat banyak views reels',
    'algoritma instagram views',
    // question
    'apakah beli views instagram aman',
    'bagaimana cara menambah views instagram',
    'berapa harga views instagram'
  ],
  
  url = 'https://auradigital.id/views-instagram/',
  siteName = 'Aura Digital',
  image = '/views-instagram-og.png',
  imageAlt = 'Jasa Tambah Views Instagram Aman & Murah',
  imageWidth = 1200,
  imageHeight = 630,
  noindex = false,
  locale = 'id_ID',
  alternateLocales = [],
  themeColor = '#ffffff',
}: Props = Astro.props

const siteOrigin = Astro.site?.href?.replace(/\/$/, '') || '';
const ensureAbs = (src: string) =>
  src.startsWith('http://') || src.startsWith('https://')
    ? src
    : `${siteOrigin}${src.startsWith('/') ? '' : '/'}${src}`;

const canonical = url.replace(/\/?$/, '/');
const ogImage = ensureAbs(image);
const kw = Array.isArray(keywords) ? keywords.join(', ') : keywords;
---

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{kw && <meta name="keywords" content={kw} />}
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
<link rel="canonical" href={canonical} />

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="product" />
<meta property="og:url" content={canonical} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={locale} />
{alternateLocales.map((l) => (
  <meta property="og:locale:alternate" content={l} />
))}
<meta property="og:image" content={ogImage} />
<meta property="og:image:secure_url" content={ogImage} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:image:width" content={String(imageWidth)} />
<meta property="og:image:height" content={String(imageHeight)} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<meta name="theme-color" content={themeColor} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
