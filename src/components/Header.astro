---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<header>
  <SkipLink />
  <Navigation>
    <!-- Menu utama -->
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/layanan/">Layanan</a>
    </li>
    <li class="menu-item">
      <a href="/tentang/">Tentang Kami</a>
    </li>
    <li class="menu-item">
      <a href="/blog/">Blog</a>
    </li>
    <li class="menu-item">
      <a href="/kontak/">Kontak</a>
    </li>

    <!-- Dropdown untuk layanan detail -->
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Produk & Jasa
        <Icon name="lucide:chevron-down" size="24" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item"><a href="/komentar-instagram/">Komentar Instagram</a></li>
        <li class="submenu-item"><a href="/followers-instagram/">Followers Instagram</a></li>
        <li class="submenu-item"><a href="/views-tiktok/">Views TikTok</a></li>
        <li class="submenu-item"><a href="/trending-topik/">Trending Topik</a></li>
        <li class="submenu-item"><a href="/jasa-report/">Jasa Report</a></li>
      </ul>
    </li>

    <!-- Tombol CTA WhatsApp -->
    <li class="menu-item highlight">
      <a href="https://wa.me/62895400361414" class="cta">
        <Icon name="lucide:message-circle" /> Chat Admin
      </a>
    </li>

    <!-- Dark mode toggle -->
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 28px;
        block-size: 28px;
      }
    }

    .cta {
      background: linear-gradient(135deg, #6d28d9, #9333ea, #c026d3);
      color: #fff !important;
      padding: 0.6rem 1.2rem;
      border-radius: 8px;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      transition: all .25s ease;

      &:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(0,0,0,.15);
      }
    }
  }
</style>
