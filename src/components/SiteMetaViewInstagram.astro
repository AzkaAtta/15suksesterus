---
/**
 * SiteMetaViewInstagram.astro — meta tag untuk halaman /views-instagram/
 */

const siteOrigin = Astro.site?.href?.replace(/\/$/, '') || 'https://auradigital.id'

const {
  title = 'Jasa Sosial Media: Tambah Views Instagram Reels & Feed Aman, Murah, Cepat',
  description = 'Layanan jasa views Instagram untuk Reels & Feed. Tambah tayangan real, aman, dan murah agar konten Anda lebih banyak dilihat dan berpeluang masuk explore.',
  url = `${siteOrigin}/views-instagram/`,
  siteName = 'Aura Digital',
  image = '/views-instagram-og.png', // ✅ pakai file og khusus 1200x630
  imageAlt = 'Views Instagram — Aura Digital',
  imageWidth = 1200,
  imageHeight = 630,
  ogType = 'product',
  twitterCard = 'summary_large_image',
  twitterSite = '@auradigitalid',
  twitterCreator = '@auradigitalid',
} = Astro.props

const ogImage = image.startsWith('http') ? image : `${siteOrigin}${image}`
---

<!-- Primary -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Canonical -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={ogType} />
<meta property="og:url" content={url} />
<meta property="og:site_name" content={siteName} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:secure_url" content={ogImage} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:image:width" content={String(imageWidth)} />
<meta property="og:image:height" content={String(imageHeight)} />

<!-- Twitter -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:site" content={twitterSite} />
<meta name="twitter:creator" content={twitterCreator} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
