---
/**
 * SchemaViewsTikTok.astro — untuk /views-tiktok/
 * Entities: WebPage, BreadcrumbList, Service(+Offer), OfferCatalog, (opsional) FAQPage
 */

const site = 'https://auradigital.id'

const {
  pageUrl = `${site}/views-tiktok/`,
  pageTitle = 'Jasa Tambah Views TikTok Aman, Murah, Cepat — Aura Digital',
  description = 'Tambah views TikTok untuk video & live secara aman dan bertahap. Efektif mendorong algoritma agar tayangan meningkat.',
  imageWebp = '/views-tiktok.webp',
  imagePng  = '/views-tiktok.png',
  serviceName = 'Views TikTok',
  serviceType = 'Video Views',
  areaServed = 'ID',
  // FAQ opsional
  faqItems = []
} = Astro.props

const graph = [
  {
    '@type': 'WebPage',
    '@id': `${pageUrl}#webpage`,
    url: pageUrl,
    name: pageTitle,
    description,
    isPartOf: { '@id': `${site}/#website` },
    primaryImageOfPage: {
      '@type': 'ImageObject',
      url: `${site}${imagePng}`,
      contentUrl: `${site}${imageWebp}`,
      encodingFormat: ['image/png', 'image/webp'],
    }
  },
  {
    '@type': 'BreadcrumbList',
    '@id': `${pageUrl}#breadcrumb`,
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: `${site}/` },
      { '@type': 'ListItem', position: 2, name: 'Layanan', item: `${site}/layanan/` },
      { '@type': 'ListItem', position: 3, name: 'Views TikTok', item: pageUrl }
    ]
  },
  {
    '@type': 'Service',
    '@id': `${pageUrl}#service`,
    name: serviceName,
    url: pageUrl,
    description,
    serviceType,
    areaServed,
    image: {
      '@type': 'ImageObject',
      url: `${site}${imagePng}`,
      contentUrl: `${site}${imageWebp}`,
      encodingFormat: ['image/png','image/webp']
    },
    provider: { '@type': 'Organization', name: 'Aura Digital', url: site },
    offers: [{
      '@type': 'Offer',
      price: '2000',
      priceCurrency: 'IDR',
      availability: 'https://schema.org/InStock',
      url: `${pageUrl}?ref=order`
    }],
    // HANYA OrderAction (ContactAction dihapus)
    potentialAction: [{
      '@type': 'OrderAction',
      target: {
        '@type': 'EntryPoint',
        urlTemplate: `${pageUrl}?ref=order`
      }
    }]
  },
  {
    '@type': 'OfferCatalog',
    '@id': `${pageUrl}#catalog`,
    name: 'Paket Views TikTok',
    url: pageUrl,
    itemListElement: [
      { '@type': 'Offer', name: '100 Views TikTok',  price: '200000',  priceCurrency: 'IDR', url: `${pageUrl}?ref=order&paket=100` },
      { '@type': 'Offer', name: '500 Views TikTok',  price: '1000000', priceCurrency: 'IDR', url: `${pageUrl}?ref=order&paket=500` },
      { '@type': 'Offer', name: '1000 Views TikTok', price: '2000000', priceCurrency: 'IDR', url: `${pageUrl}?ref=order&paket=1000` },
    ]
  }
]

// Tambah FAQ jika ada
if (faqItems.length) {
  graph.push({
    '@type': 'FAQPage',
    '@id': `${pageUrl}#faq`,
    mainEntity: faqItems.map(f => ({
      '@type': 'Question',
      name: f.q,
      acceptedAnswer: { '@type': 'Answer', text: f.a }
    }))
  })
}

const jsonld = { '@context': 'https://schema.org', '@graph': graph }
---

<script type="application/ld+json" set:html={JSON.stringify(jsonld)}></script>
